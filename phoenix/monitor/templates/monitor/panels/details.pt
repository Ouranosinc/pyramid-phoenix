<?python
   if job.get('status') == 'ProcessSucceeded':
     icon_class="fa fa-check-circle text-success"
     status_class="text-success"
   elif job.get('status') == 'ProcessFailed':
     icon_class="fa fa-times-circle text-danger"
     status_class="text-danger"
   elif job.get('status') == 'ProcessPaused':
     icon_class="fa fa-pause text-muted"
     status_class="text-muted"
   elif job.get('status') == 'ProcessStarted' or job.get('status') == 'ProcessAccepted':
     icon_class="fa fa-cog fa-spin text-muted"
     status_class="text-muted"
   else:
     icon_class="fa fa-question-circle text-danger"
     status_class="text-danger"
?>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      ${job.get('title')}
      <i class="${icon_class}" data-toggle="tooltip" title="${job.get('status')}"> </i>
      <div tal:condition="request.has_permission('submit') and job.get('status') == 'ProcessSucceeded'" class="pull-right">
        <a class="btn btn-danger btn-xs"
           rel="tooltip"
           data-toggle="tooltip"
           title="Delete Job"
           href="${request.route_path('delete_job', job_id=job.get('identifier'))}">
          <i class="fa fa-trash"></i> Delete Job
        </a>
        <a class="btn btn-success btn-xs"
           rel="tooltip"
           data-toggle="tooltip"
           title="Restart Job"
           href="${request.route_path('restart_job', job_id=job.get('identifier'))}">
          <i class="fa fa-repeat"></i> Restart Job
        </a>
      </div>
    </h3>
  </div>
  <div class="panel-body">
    <span>
      ${job.get('abstract')}
    </span>
    <div>
      <div class="col-md-3">
        <dl>
          <dd>
            <span class="text-muted ${status_class}" data-toggle="tooltip" title="Job running status.">
              <i class="${icon_class}"></i> ${job.get('status')}
            </span>
          </dd>
          <p/>
          <dd>
            <span class="text-muted" data-toggle="tooltip" title="Duration time of Job.">
              <i class="fa fa-clock-o"></i> Ran for ${job.get('duration', '???')}
            </span>
          </dd>
          <dd>
            <span class="text-muted" data-toggle="tooltip" title="Job finished at date.">
              <i class="fa fa-calendar"></i> ${job.get('finished', '???')}
            </span>
          </dd>
          <p/>
          <dd>
            <span class="text-muted" data-toggle="tooltip" title="Job note.">
              <i class="fa fa-sticky-note-o"></i> ${job.get('caption', '???')}
            </span>
          </dd>
        </dl>
      </div>
      <div class="col-md-3">
        <dl>
          <dt>Progress</dt>
          <dd>
            <div class="progress">
              <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="${job.get('progress', 0)}" aria-valuemin="0" aria-valuemax="100" style="width: ${job.get('progress', 0)}%;">
                <span>${job.get('progress', 0)}%</span>
              </div>
            </div>
          </dd>
          <dt>Labels</dt>
          <dd>
            <a tal:repeat="label job.get('tags', [])" href="/monitor?tag=${label}" class="label label-info">${label}</a>
          </dd>
        </dl>
      </div>
      <div class="col-md-6">
        <dl>
          <dt>Status Message</dt>
          <dd>
            <span class="text-muted" data-toggle="tooltip" title="Job status message">
              ${job.get('status_message')}
            </span>
          </dd>
        </dl>
      </div>
    </div>
  </div>
</div>
