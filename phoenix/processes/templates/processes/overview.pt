<metal:block use-macro="main_template">

    <div metal:fill-slot="content">
        <div class="container">
            <div class="page-header">
                <h2>Processes
                    <small>Please choose one of the available Web Processing Services or pinned Processes.</small>
                </h2>
            </div>

            <!-- pinned process -->
            <section class="pinned" tal:condition="processes">
              <div class="container">
                <div class="row">
                  <div class="col-md-12">
                    <a href="${request.route_path('settings_processes')}" class="pull-right text-muted">
                      Customize pinned processes
                    </a>
                    <h5 class="pull-left">
                      Pinned processes
                    </h5>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-4" tal:repeat="process processes">
                    <a href="${process.url}">
                      <h4>${process.title}</h4>
                    </a>
                    <p>
                      ${process.description}
                    </p>
                    <p>
                      <div class="pull-left text-muted text-left" style="font-size: 1.0em;">
                          <span>
                              <i class="fa fa-cogs"></i>
                              ${process.service_title}
                          </span>
                          <span>
                              <i class="fa fa-star"></i>
                              3
                          </span>
                      </div>
                    </p>
                  </div>
              </div>
            </section>

            <section class="services">

            <ul class="list-group">
                <li class="list-group-item" tal:repeat="item items">
                    <div class="media">
                        <span class="pull-left text-muted" aria-hidden="true">
                            <i class='fa fa-cogs'></i>
                        </span>
                        <div class="media-body">
                            <div class="pull-right text-muted text-right" style="font-size: 1.0em;">
                                <span>
                                    <i class="fa fa-cogs"></i>
                                    7
                                </span>
                                <span>
                                    <i class="fa fa-star"></i>
                                    11
                                </span>
                            </div>
                            <h4 class="media-heading">
                              <a href="${item.url}">${item.title}</a>
			                          <span class="text-muted" aria-hidden="true">
				                          <i tal:attributes="class 'fa fa-unlock text-success' if item.public else 'fa fa-lock text-danger'"></i>
                              </span>
                            </h4>
                            <div>
                                <span>${item.description}</span>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>

            </section>

        </div>
    </div>

</metal:block>
